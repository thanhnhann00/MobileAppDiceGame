<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Background color when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Default background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
